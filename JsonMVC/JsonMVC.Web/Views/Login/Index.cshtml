@{Layout = null;}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/login")
</head>
<body>
    <div class="login">
        <div class="container">
            <div class="row">
                <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
                    <div class="boxLogin animated rollIn">
                        <h3>LOGIN</h3>
                        <!-- UserName -->
                        <div class="form-group animated bounce">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <img src="~/Content/img/icoLogin.png" alt="">
                                </span>
                                <input name="TxtUser" type="text" id="TxtUser" tabindex="1" class="form-control" placeholder="Usuário" />
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="form-group animated bounce">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <img src="~/Content/img/icoPass.png" alt="">
                                </span>
                                <input name="TxtPassword" type="password" id="TxtPassword" tabindex="2" class="form-control" placeholder="Senha" />
                            </div>
                        </div>

                        <div class="row animated bounce">
                            <div class="col-xs-6">
                                <!-- Remember? -->
                                <section>
                                    <div class="squaredThree">
                                        <input id="ChkRemember" type="checkbox" name="ChkRemember" tabindex="3" />
                                        <label for="ChkRemember"></label>
                                        <a href="#" class="fontBoxLogin remember-password">
                                            Lembrar senha
                                        </a>
                                    </div>
                                </section>
                            </div>
                            <div class="col-xs-6">
                                <input class="btn btn-lcj" id="BtnSignIn" name="BtnSignIn" tabindex="4" type="submit" value="ENTRAR" />
                            </div>
                        </div>

                        <div class="row animated bounce" style="margin-top: 25px;">
                            <div class="col-xs-12">
                                <p>
                                    <!-- Lost Password -->
                                    <a class="fontBoxLogin" data-target="#ModalLostPassword" data-toggle="modal" id="BtnForgotPassword" tabindex="5">Esqueci minha senha</a>
                                </p>
                                <p>
                                    <!-- First Access -->
                                    <a class="fontBoxLogin" data-target="#ModalFirstAcess" data-toggle="modal" id="BtnFirstAccess" tabindex="6">Primeiro acesso? Clique aqui</a>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>